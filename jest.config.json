{
  "preset": "ts-jest",
  "verbose": true,
  "setupFiles": ["<rootDir>/.jest.env.js"],
  "extensionsToTreatAsEsm": [
    ".ts"
  ],
  "globals": {
    "ts-jest": {
      "useESM": true
    }
  },
  "testEnvironment": "jsdom",
  "moduleFileExtensions": [
    "vue",
    "js",
    "json",
    "jsx",
    "ts",
    "tsx",
    "node"
  ]
}
