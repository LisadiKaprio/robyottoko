#!/bin/sh -ex

rm build/* -rf

# server build
npm run rollup -- -c rollup.server.config.js
cp -r src/templates build/server/
cp -r src/config_data build/server/

# frontend build
# npx vue-tsc --noEmit
npm run vite -- build --config vite.config.js

# widgets build
npm run vite -- build --config widget.vite.config.js
