{% extends 'base.twig' %}
{% block page %}
  <style type="text/css">
    #playlist a { color: #000; text-decoration: none; }
    #playlist a:hover { text-decoration: underline; }

    #controls {
      position: fixed;
      bottom: 0;
      height: auto;
    }
    #controls ul.items { list-style: none; margin: 0; padding: 0; }
    #controls ul.items li { display: inline-block; margin-left: 1em; }
    #controls ul.items li:first-child { margin-left: 0; }

    #controls .btn {
      margin: 4px;
    }

    #player {
      position: relative;
      padding-bottom: 56.25%;
      overflow: hidden;
    }

    #player iframe, #player object, #player embed {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }

    ol {
      color: #000;
      list-style: none;
      margin: 0;
      padding: 0
    }

    ol li {
      padding: .5em 1em;
      border: solid 1px #444;
      display: grid;
      grid-template-areas: "title title"
                           "meta vote";
      grid-template-columns: auto 150px;
    }

    ol li .title {
      font-size: 1.2em;
      font-weight: bold;
      grid-area: title;
      margin-bottom: 5px;
    }

    ol li .meta {
      grid-area: meta;
      align-self: end;
    }

    ol li .vote {
      font-size: 24px;
      text-align: right;
      grid-area: vote;
    }

    .playing {
      background: #d0d0d0;
    }

    .next {
      background: #7b756e;
    }
  </style>
  <script>window.SR_MODE = '{{ mode }}'</script>
  <script src="/static/modules/sr.js"></script>
{% endblock %}
